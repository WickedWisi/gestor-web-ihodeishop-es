{
  "manifest_version": 3,
  "name": "Gestor web iHodeiShop.es",
  "version": "1.0",
  "description": "Gestiona la web desde una pesta√±a completa",
  "permissions": ["storage", "tabs", "activeTab"],
  "action": {
    "default_title": "Abrir gestor",
    "default_icon": "./assets/icon.png"
  },
  "background": {
    "service_worker": "./js/background.js"
  },
  "host_permissions": ["http://localhost/*"],
  "icons": {
    "16": "./assets/icon.png",
    "48": "./assets/icon.png",
    "128": "./assets/icon.png"
  }
}
